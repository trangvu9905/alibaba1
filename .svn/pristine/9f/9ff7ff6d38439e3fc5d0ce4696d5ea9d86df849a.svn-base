 #NcboxLoadingGraphic{background:url(/images/loading.gif) no-repeat center center;}
 #NcboxLoadingOverlay{background:#000;}
 #NcboxTitle {
    position: absolute;
    top: 0px;
    background: transparent linear-gradient(#FEFEFD, #F9F9F9 3%, #E5E5E5) repeat scroll 0% 0%;
    color: #000000;
    border-bottom: 1px solid #CCC;
    width: 100%;
    height: 35px;
    font-size: 16pt;
    font-weight: normal;
    padding-left: 10px;
    line-height:40px;
}
#cboxTitle .btsend {
    float:right;
    margin-right:60px;
    margin-top:8px;
    width:70px;
}
        #NcboxCurrent{position:absolute; top:-22px; right:205px; text-indent:-9999px;}

        /* these elements are buttons, and may need to have additional styles reset to avoid unwanted base styles */
        #NcboxPrevious, #NcboxNext, #NcboxSlideshow, #NcboxClose {
    border: 0px none;
    padding: 0px;
    margin-right: 10px;
    overflow: visible;
    width: 30px;
    height: 30px;
    position: absolute;
    text-indent:-9999px; 
    top: 5px;
    background: url(/images/icon_x.png) no-repeat 0px 0px;right:0;
}
        
        /* avoid outlines on :active (mouseclick), but preserve outlines on :focus (tabbed navigating) */
        #NcboxPrevious:active, #NcboxNext:active, #NcboxSlideshow:active, #NcboxClose:active {outline:0;}

        #NcboxPrevious{background-position:0px 0px; right:44px;}
        #NcboxPrevious:hover{background-position:0px -25px;}
        #NcboxNext{background-position:-25px 0px; right:22px;}
        #NcboxNext:hover{background-position:-25px -25px;}
        /*#cboxClose{background-position:-50px 0px; right:0;}*/
        #NcboxClose:hover{  background: url(/images/icon_x_hover.png) no-repeat 0px 0px; }
        .cboxSlideshow_on #NcboxPrevious, .cboxSlideshow_off #NcboxPrevious{right:66px;}
        .cboxSlideshow_on #NcboxSlideshow{background-position:-75px -25px; right:44px;}
        .cboxSlideshow_on #NcboxSlideshow:hover{background-position:-100px -25px;}
        .cboxSlideshow_off #NcboxSlideshow{background-position:-100px 0px; right:44px;}
        .cboxSlideshow_off #NcboxSlideshow:hover{background-position:-75px -25px;}
