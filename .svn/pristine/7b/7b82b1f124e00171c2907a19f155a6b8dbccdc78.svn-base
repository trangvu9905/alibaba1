body{
  width: auto;
  height: auto;
  background-color: #F2F3F5;
}
header {
  position: fixed;
  top: 0;
  width: 100%;
 z-index: 20;
  box-sizing: border-box;
 
}
 
header>nav {
  position: fixed;
  width: 100%;
  height: 43px;
  background-color: #3578E5;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  transition: align-items .2s;
}
 

 
.vlt-menutop>ul {
  display: flex;
  margin: 50px 50px 0 0;
  padding: 0;
  transition: margin .2s;
}
  
li a {
  display: block;
  padding: 10px 20px;
}
 
.toggle-menu {
  display: none;
  font-size: 2rem;
  color: #fff;
  margin: 10px 10px 0 0;
  transition: margin .2s;
}
.scroll {
  box-shadow: 0 7px 0 0 rgba(0, 0, 0, .1);
}
 
.scroll  {
  padding: 10px 20px;
  font-size: 1.5rem;
}
 
.scroll nav {
  align-items: center;
}
main {
  display: block;
  padding: 0 20px;

}
.div{
  display: block; 
}

.scroll ul,
.scroll .toggle-menu {
  margin: 0;
}
@media screen and (max-width: 1060px) {
  header {
    padding: 10px;
  }
  nav {
    align-items: center;
    top:0;
    left: 0;

  }
  
  
  .toggle-menu {
    display: block;
  }
